# Backend API Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://credential_user:credential_password@localhost:5432/credential_chain
DB_HOST=localhost
DB_PORT=5432
DB_NAME=credential_chain
DB_USER=credential_user
DB_PASSWORD=credential_password

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRY=24h

# Encryption (for file storage)
ENCRYPTION_KEY=your_32_character_encryption_key_change_in_production_!!
ENCRYPTION_ALGORITHM=aes-256-cbc

# ML Service
ML_SERVICE_URL=http://localhost:8000

# Blockchain Configuration
BLOCKCHAIN_NETWORK=sepolia
BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here_without_0x_prefix
CERTIFICATE_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
FRAUD_DETECTION_STORE_ADDRESS=0x0000000000000000000000000000000000000000
SKILL_VALIDATOR_ADDRESS=0x0000000000000000000000000000000000000000

# Storage Configuration
STORAGE_TYPE=local
# For local development
STORAGE_LOCAL_PATH=./uploads
# For production (S3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=credential-chain-certificates

# IPFS (Optional - for decentralized storage)
IPFS_ENABLED=false
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http

# Email Configuration (for notifications)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@credentialchain.com

# Redis (Optional - for caching and sessions)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000

# Session
SESSION_SECRET=your_session_secret_change_in_production_min_32_chars

# File Upload Limits
MAX_FILE_SIZE=10485760
# 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Development Tools
DEBUG=false
VERBOSE_LOGGING=false
