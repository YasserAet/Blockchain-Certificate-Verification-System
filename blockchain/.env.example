# Blockchain Configuration (Hardhat)
# Copy this file to .env and fill in your actual values

# Network Configuration
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Private Keys (NEVER commit actual private keys!)
PRIVATE_KEY=your_private_key_here_without_0x_prefix_GET_FROM_METAMASK
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here

# Block Explorer API Keys (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Gas Configuration
GAS_LIMIT=8000000
GAS_PRICE=20000000000
# 20 Gwei

# Deployment Configuration
CONFIRMATIONS=2
# Number of confirmations to wait after deployment

# Contract Addresses (filled after deployment)
CERTIFICATE_REGISTRY_ADDRESS=
FRAUD_DETECTION_STORE_ADDRESS=
SKILL_VALIDATOR_ADDRESS=

# Admin Configuration
ADMIN_ADDRESS=your_admin_wallet_address_here
INITIAL_ISSUERS=0xAddress1,0xAddress2,0xAddress3

# Network Selection
DEFAULT_NETWORK=sepolia
# Options: hardhat, localhost, sepolia, polygon, mumbai

# Hardhat Network (Local)
HARDHAT_CHAIN_ID=31337
HARDHAT_FORK=false
HARDHAT_FORK_BLOCK_NUMBER=

# Reporting
REPORT_GAS=true
COINMARKETCAP_API_KEY=
# Optional: for gas cost reporting in USD

# Tenderly (Optional - for debugging)
TENDERLY_PROJECT=
TENDERLY_USERNAME=
TENDERLY_FORK_ID=

# Defender (Optional - for secure deployments)
DEFENDER_API_KEY=
DEFENDER_API_SECRET=
