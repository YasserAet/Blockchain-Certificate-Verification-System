# Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_API_TIMEOUT=30000

# Blockchain Configuration
NEXT_PUBLIC_BLOCKCHAIN_NETWORK=localhost
NEXT_PUBLIC_BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545
NEXT_PUBLIC_CHAIN_ID=31337
# Hardhat local network chain ID

# Smart Contract Addresses
NEXT_PUBLIC_CERTIFICATE_REGISTRY_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3
NEXT_PUBLIC_FRAUD_DETECTION_STORE_ADDRESS=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512
NEXT_PUBLIC_SKILL_VALIDATOR_ADDRESS=0x9fE46736679d2D9a65F0992F2272dE9f3c7fa6e0

# Block Explorer
NEXT_PUBLIC_BLOCK_EXPLORER=http://localhost:8545

# App Configuration
NEXT_PUBLIC_APP_NAME=Credential Chain
NEXT_PUBLIC_APP_DESCRIPTION=Blockchain-based Skills Certification Platform
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_WEB3_WALLET=true
NEXT_PUBLIC_ENABLE_QR_VERIFICATION=true
NEXT_PUBLIC_ENABLE_SKILL_MATCHING=true
NEXT_PUBLIC_ENABLE_BULK_UPLOAD=true

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Vercel Analytics (if deploying to Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS=false

# Max File Upload Size (bytes)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
# 10MB

# Supported File Types
NEXT_PUBLIC_SUPPORTED_FILE_TYPES=.pdf,.jpg,.jpeg,.png

# Pagination
NEXT_PUBLIC_ITEMS_PER_PAGE=10

# Theme
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Development
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_SHOW_DEV_TOOLS=false
